import random


class Cat:
    def __init__(self, name):
        self.name = name
        self.sadness = 25
        self.degradation = 0
        self.alive = True

    def to_eat(self):
        print("Time to eat")
        self.degradation -= 1
        self.sadness -= 1

    def to_sleep(self):
        print("I will have a nap")
        self.sadness -= 1
        self.degradation -= 2

    def to_chill(self):
        print("Loafing time")
        self.sadness -= 3
        self.degradation += 2

    def is_alive(self):
        if self.degradation > 20:
            print("I degraded...")
            self.alive = False
        elif self.sadness >= 50:
            print("I am sadâ€¦")
            self.alive = False

    def end_of_day(self):
        print(f"Sadness = {self.sadness}")
        print(f"Degradation = {round(self.degradation, 2)}")

    def live(self, day):
        day_label = f"Day {day} of {self.name}'s life"
        print(f"{day_label:=^50}")
        live_cube = random.randint(1, 3)
        if live_cube == 1:
            self.to_eat()
        elif live_cube == 2:
            self.to_sleep()
        elif live_cube == 3:
            self.to_chill()
        self.end_of_day()
        self.is_alive()


# Main execution
barsik = Cat(name="Barsik")
for day in range(365):
    if not barsik.alive:
        break
    barsik.live(day)
